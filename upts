ngOnInit() {
  const storedChartData = localStorage.getItem("chartData");
  const storedChartOptions = localStorage.getItem("chartOptions");

  if (storedChartData && storedChartOptions) {
    const chartData = JSON.parse(storedChartData);
    const chartOptions = JSON.parse(storedChartOptions);
    this.chartjsService.createPieChart(chartData, chartOptions, 'piechart');
  } else {
    const sampleChartData = {
      labels: ['Sample Data 1', 'Sample Data 2', 'Sample Data 3'],
      datasets: [{
        data: [30, 40, 50],
        backgroundColor: ['#ff0000', '#00ff00', '#0000ff'],
        hoverBackgroundColor: ['#ff3333', '#33ff33', '#3333ff']
      }]
    };

    const sampleChartOptions: ChartOptions = {
      responsive: true,
      legend: {
        position: 'top',
      },
      animation: {
        animateScale: true,
        animateRotate: true
      }
    };

    this.chartjsService.createPieChart(sampleChartData, sampleChartOptions, 'piechart');
  }
}
