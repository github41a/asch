<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkbox Control</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="checkbox-container">
        <input type="checkbox" id="enableUpload" class="checkbox-input">
        <label for="enableUpload" class="checkbox-label">Enable Upload</label>
    </div>
    <div class="file-upload-container">
        <button id="fileUploadButton" class="upload-button" disabled>Upload File</button>
    </div>
    <script src="script.js"></script>
</body>
</html>


document.addEventListener('DOMContentLoaded', function () {
    const enableUploadCheckbox = document.getElementById('enableUpload');
    const fileUploadButton = document.getElementById('fileUploadButton');

    enableUploadCheckbox.addEventListener('change', function () {
        if (this.checked) {
            fileUploadButton.disabled = false;
        } else {
            fileUploadButton.disabled = true;
        }
    });
});
