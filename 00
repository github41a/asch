<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="styles.css">
  </head>
  <body>
    <button id="showButton">Show Loading</button>
    <div id="overlay" class="overlay"></div>
    <div id="loading" class="loading">
      Loading...
    </div>
  </body>
  <script src="script.js"></script>
</html>


.overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5); /* Background with lowered opacity */
}

.loading {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  padding: 20px;
  border-radius: 5px;
}


const showButton = document.getElementById("showButton");
const overlay = document.getElementById("overlay");
const loading = document.getElementById("loading");

showButton.addEventListener("click", () => {
  overlay.style.display = "block"; // Show the overlay with lowered opacity
  loading.style.display = "block"; // Show the loading button
});
