python
import openpyxl

# Load the Excel file
workbook = openpyxl.load_workbook('your_file.xlsx')

# Select the sheet
sheet = workbook['your_sheet']

# Iterate through the rows
for row in sheet.iter_rows():
    # Check if the cell_comment column matches your criteria
    if row[0].comment:
        # Delete the cell_comment data
        row[0].comment.text = None

# Save the changes
workbook.save('your_file.xlsx')
