<div class="relative h-6 w-full bg-gray-200">
  <div class="h-full bg-blue-500" id="progressBar" style="width: 0;"></div>
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="text-white text-sm font-bold" id="progressText"></div>
  </div>
</div>

<script>
  // Get the progress bar and progress text elements
  const progressBar = document.getElementById('progressBar');
  const progressText = document.getElementById('progressText');

  // Set the initial progress value (between 0 and 100)
  let progress = 0;

  // Update the progress bar width and text
  const updateProgressBar = () => {
    progressBar.style.width = `${progress}%`;
    progressText.textContent = `${progress}%`;
  };

  // Update the progress on hover
  progressBar.addEventListener('mouseover', () => {
    progress = Math.floor(Math.random() * 101); // Generate a random progress value between 0 and 100
    updateProgressBar();
  });

  // Reset the progress on mouseout
  progressBar.addEventListener('mouseout', () => {
    progress = 0;
    updateProgressBar();
  });
</script>
